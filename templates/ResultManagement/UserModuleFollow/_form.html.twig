{{ form_start(form, { 'attr': {'class': 'p-5 lms-bg-gray'} }) }}
    {# form_widget(form) #}
	<div class="d-flex flex-column flex-lg-row justify-content-lg-around">
        <div class="col-lg-6 d-flex flex-column justify-content-between mb-3" disabled>
            {{ form_label(form.startDate,  'presentiel.module.start_date'|trans ) }}
            {{ form_widget(form.startDate, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.startDate) }}
        </div>  
        <div class="col-lg-6 d-flex flex-column justify-content-between mb-3">
            {{ form_label(form.endDate,  'presentiel.module.end_date'|trans ) }}
            {{ form_widget(form.endDate, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.endDate) }}
        </div>
    </div>    
    <div class="d-flex flex-column flex-lg-row justify-content-lg-around align-items-lg-end">
        <div class="col-lg-6 d-flex flex-column justify-content-between mb-3">
            {{ form_label(form.durationTotalSec,  'presentiel.module.duration_total'|trans )  }}
            {{ form_widget(form.durationTotalSec, { 'attr': {'class': 'form-control',} }) }}{{'presentiel.module.seconde'|trans }}
            {{ form_errors(form.durationTotalSec) }}
        </div>      
        <div class="col-lg-6 mb-3">
            {{ form_widget(form.success) }}
            {{ form_label(form.success,  'presentiel.module.success'|trans ) }}
            {{ form_errors(form.success) }}
        </div>
    </div>  
    <div class="m-auto" hidden>
        {{ form_label(form.validationDate,  'presentiel.module.date_validation'|trans ) }}
        {{ form_widget(form.validationDate, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.validationDate) }}
    </div> 

    {# <div class="form-group ">
       <a href="{{ path('results_user_module_follow_file_list', {'userModuleFollow': user_module_follow.id}) }}">{{ 'formation.page.download' | trans }} <i class="material-icons lms-material-icons">edit</i></a>
    </div> #}

    <div class="d-flex flex-column flex-lg-row justify-content-lg-around my-3">
        {% for f in user_module_follow.files %}
            {% if f.isValid %}
                <div class="col-lg-6 d-flex flex-column justify-content-between mb-3">
                    <a href="{{ asset("uploads/files/"~f.uri) }}" target="_blank"> {% if f.isDownload %}<i class="material-icons lms-material-icons">cloud_download</i>{% endif %}&nbsp;&nbsp;&nbsp;&nbsp;{{ f.name }} </a>
                </div>
            {% endif %}  
        {% endfor %}
    </div>

    <div class="text-center">
        {% if user_module_follow.module.type is not null and user_module_follow.module.type.id == 3 %}
            <div class="form-group">                      
                <button class="lms-button lms-button-blue">{{ button_label|default('Save') }}</button>
            </div>  
        {% endif %}
    </div> 

    
{{ form_end(form) }}
