        </div>  
        <div class="d-flex flex-column flex-lg-row justify-content-lg-around mb-3">
            <div class="col-lg-6 d-flex flex-column justify-content-between">
                {{ form_label(form.score,  'presentiel.evalPres.score'|trans ) }}
                {{ form_widget(form.score, { 'attr': {'class': 'form-control', 'placeholder':'yyyy-mm-dd'} }) }}
                {{ form_errors(form.score) }}
