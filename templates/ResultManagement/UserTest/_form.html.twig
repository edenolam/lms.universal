{% if test.isTestPresentiel  %}
    {{ form_start(form, { 'attr': {'class': 'p-5 lms-bg-gray'} }) }}
        {# form_widget(form) #}
        <div class="d-flex flex-column flex-lg-row justify-content-lg-around mb-3">
            <div class="col-lg-6 d-flex flex-column justify-content-between">
                {{ form_label(form.datePass,  'presentiel.evalPres.date_pass'|trans ) }}
                {{ form_widget(form.datePass, { 'attr': {'class': 'form-control', 'placeholder':'yyyy-mm-dd'} }) }}
                {{ form_errors(form.datePass) }}
            </div>  
            <div class="col-lg-6 d-flex flex-column justify-content-between">
                {{ form_label(form.dateDown,  'presentiel.evalPres.date_down'|trans ) }}
