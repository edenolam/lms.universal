{% extends 'UserFrontManagement/emails/mail_layout.html.twig' %}

{% block mail %}
    <tr mc:hideable >
        <td align="center" valign="top">
            <!-- CENTERING TABLE // -->
            <table border="0" cellpadding="0" cellspacing="0" width="100%" bgcolor="#B9E1E6">
                <tr>
                    <td align="center" valign="top">
                        <!-- FLEXIBLE CONTAINER // -->
                        <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                            <tr>
                                <td align="center" valign="top" width="600" class="flexibleContainerCell">
                                    <table border="0" cellpadding="30" cellspacing="0" width="100%">
                                        <tr>
                                            <td align="center" valign="top">

                                                <table border="0" cellpadding="0" cellspacing="0"  width="100%" style="text-align:left;font-family:Helvetica,Arial,sans-serif;font-size:13px;color:#5F5F5F;">
                                                    <tr>
                                                        <td>
                                                            {{ 'resetting.email.bonjour'|trans({'%username%': user.username}) }}
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            {% if user.ldapUser %}
                                                                {{ 'resetting.email.youre_ldap'|trans}}
                                                            {% else %}
                                                                {{ 'resetting.email.message'|trans({'%confirmationUrl%': confirmationUrl}) }}
                                                            {% endif %}
                                                        </td>
                                                    </tr>
                                                                                        
                                                </table>                                                                                              
                                                <!-- // CONTENT TABLE -->
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                        <!-- // FLEXIBLE CONTAINER -->
                    </td>
                </tr>
            </table>
            <!-- // CENTERING TABLE -->
        </td>
    </tr>
                

 {% endblock %} 