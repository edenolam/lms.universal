{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
<link href="{{ asset("assets/summernote/summernote-bs4.css") }}" rel="stylesheet" />    
{% endblock %}

{% block body %}
<!-- navigator -->
<div class="lms-breadcrumb">
   &gt; <span>{{'test.list.ariane_gestion'|trans}}</span> &gt; "{{ test.title }}"
</div>

<!-- title of page -->
<div class="page-title"><h2 class="title capitalize"> {{'menu.concepteur.test'|trans}} </h2><hr></div>

<!-- body of page -->
<div class="row ml-2 mr-2">
    <div class="col-lg-4">
      <div class="card border-0">
        <div class="card-header">
            <h3 class="card-title"> 
                <span class="lms-text-primary text-capitalize font-weight-bold">{{ 'actions' | trans }} </span>
            </h3>
        </div>
      </div>  
        {% include "TestManagement/Question/actions.html.twig" %}    
    </div>
    <div class="col-lg-8"> 
        <div class="card border-0"> 
            <div class="card-header">
                <h3 class="card-title"> 
                {{ 'question.view' | trans }} 
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6 mb-5">
                        <form class="mt-5">
                            {% include "TestManagement/Question/form_edit.html.twig" %}     
                        </form>
                    </div>  
                    <div class="col-lg-6">
                        {% include "TestManagement/Answer/list_lite.html.twig" %} 
                    </div>               
                </div> 
            </div> 
        </div>                                
    </div>
</div>

{% endblock %}

{% block js %}
    {{ parent() }} 
<script src="{{ asset("assets/summernote/summernote-bs4.js") }}"></script>

<script>
$(document).ready(function() {
  $('.summernote').summernote({
      height: 150,
      toolbar: [
        ['style', ['bold', 'italic', 'underline', 'clear']],
        ['color', ['color']],
        ['para', ['ul', 'ol']]
      ]
    });
});
</script>     
{% endblock %}