<div class="lms-aside-card">
    <div class="p-3 lms-aside-card-content">
        <div class="d-flex justify-content-between pb-3 lms-aside-card-title">
            <span class="text-uppercase">{{ 'userFrontManagement.page.note' | trans | raw }}</span>
            <span id="note-add-button">
                <i class="material-icons lms-material-icons" data-original-title="Edit" data-toggle="tooltip">
                    create
                </i>
            </span>
        </div>

        <div class="lms-aside-card-body pt-2">
            {% if userPage is not null and userPage is defined %}
                <div id="note-content">{{userPage.note | raw}}</div>
            {% endif %}
        </div>
        <div class="lms-aside-card-footer" id="note-input-block" style="display:none">
            {% set textValue = "" %}
            {% if userPage is not null and userPage is defined %}
                {% set textValue = userPage.note|raw %}
            {% endif %}
            <textarea type="text" data-page="{{ currentPage.slug }}" data-path="{{ path('user_note_add') }}" id="note-input" class="form-control">{{textValue}}</textarea>
            <div class="pt-2 d-flex justify-content-center">
                <button class="lms-button lms-button-blue" id="note-submit"> <i class="material-icons lms-material-icons">save</i> {{'global.submit'|trans}}</button>
            </div>
        </div>
    </div>
</div>
