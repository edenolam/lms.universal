{% extends 'UserFrontManagement/emails/mail_layout.html.twig' %}

{% block mail %}
<tr mc:hideable >
    <td align="center" valign="top">
        <!-- CENTERING TABLE // -->
        <table border="0" cellpadding="0" cellspacing="0" width="100%" bgcolor="#eeeeee">
            <tr>
                <td align="center" valign="top">
                    <!-- FLEXIBLE CONTAINER // -->
                    <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                        <tr>
                            <td align="center" valign="top" width="600" class="flexibleContainerCell">
                                <table border="0" cellpadding="30" cellspacing="0" width="100%">
                                    <tr>
                                        <td align="center" valign="top">

                                            <!-- CONTENT TABLE // -->
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td valign="top" class="textContent">
                                                        <div mc:edit="body" style="text-align:left;font-family:Helvetica,Arial,sans-serif;font-size:15px;margin-bottom:0;color:#5F5F5F;line-height:135%;">
                                                            <br/><b>{{ 'userFrontManagement.mail.layout.bonjour'|trans }} {{ user.firstname }} {{ user.lastname}}</b><br/>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </table>

                                            <table border="0" cellpadding="0" cellspacing="0"  width="100%" style="text-align:left;font-family:Helvetica,Arial,sans-serif;font-size:13px;color:#5F5F5F;">
                                                <tr>
                                                    <td>
                                                    {{ 'userFrontManagement.mail.relance.formation_valide'|trans({'%title%': formationSessionF.session.formationPath.title, '%closing%':formationSessionF.session.closingDate|date('d/m/Y')  }) }} <a href="{{ base_url }}" target="_blank">
                                                            {{lms_name}} </a>.
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        {{ 'userFrontManagement.mail.relance.formation_progression'|trans({'%progression%':formationSessionF.percentage , '%title%': formationSessionF.session.formationPath.title}) }}.
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        {{ 'userFrontManagement.mail.relance.liste'|trans }}
                                                         <ul>
                                                            {% for module in modules %}
                                                                <li>{{ module.module.title }}</li>
                                                            {% endfor %}
                                                        </ul>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        {{ 'userFrontManagement.mail.relance.eval'|trans}}
                                                         <ul>
                                                            {% for evaluation in evaluations %}
                                                                <li>{{ evaluation.test.typeTest.title }} ({{ evaluation.module.title }})</li>
                                                            {% endfor %}

                                                        </ul>
                                                    </td>
                                                </tr>

                                               
                                                
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                    <!-- // FLEXIBLE CONTAINER -->
                </td>
            </tr>
        </table>
        <!-- // CENTERING TABLE -->
    </td>
</tr>
<!-- // MODULE ROW -->
{% endblock %}

