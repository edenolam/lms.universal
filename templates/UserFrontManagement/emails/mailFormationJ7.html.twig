{% extends 'UserFrontManagement/emails/mail_layout.html.twig' %}

{% block mail %}
<tr mc:hideable >
    <td align="center" valign="top">
        <!-- CENTERING TABLE // -->
        <table border="0" cellpadding="0" cellspacing="0" width="100%" bgcolor="#eeeeee">
            <tr>
                <td align="center" valign="top">
                    <!-- FLEXIBLE CONTAINER // -->
                    <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                        <tr>
                            <td align="center" valign="top" width="600" class="flexibleContainerCell">
                                <table border="0" cellpadding="30" cellspacing="0" width="100%">
                                    <tr>
                                        <td align="center" valign="top">

                                            <!-- CONTENT TABLE // -->
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td valign="top" class="textContent">
                                                        <div mc:edit="body" style="text-align:left;font-family:Helvetica,Arial,sans-serif;font-size:15px;margin-bottom:0;color:#5F5F5F;line-height:135%;">
                                                        <br/><b>{{ 'userFrontManagement.mail.layout.bonjour'|trans }}, {{ user.firstname }} {{ user.lastname}},</b>
                                                        <br/><br/>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </table>

<table border="0" cellpadding="0" cellspacing="0"  width="100%" style="text-align:left;font-family:Helvetica,Arial,sans-serif;font-size:13px;color:#5F5F5F;">
    
    {% for formation in formations_todo|slice(0,1) %}
		<tr>
        	<td>
                {{ 'userFrontManagement.mail.body.formation_avenir'|trans({'%title%': formation.formationPath.title,'%opening%':formation.openingDate | date('d/m/Y') }) }}<a href="{{ base_url }}" target="_blank">{{lms_name}}</a>.
                {#Nous vous informons que votre aurez accès à la formation"<a href="{{ base_url }}" target="_blank">{{ formation.formationPath.title }}</a>"le {{ formation.openingDate | date('d/m/Y')}}
                prochain sur la plateforme <a>EUROPHARMA</a>.
                {#<ul>
                     {% for formationPathModule in formation.formationPath.formationPathModules %}
                        <li>{{ formationPathModule.module.title }}</li>
                    {% endfor %}
                </ul>#}
        	</td>
    	</tr>
        <tr>
            <td>
                {{ 'userFrontManagement.mail.body.formation_avenir_dispo'|trans({'%closing%': formation.closingDate| date('d/m/Y')})|raw }}.
{#Cette formation sera disponible jusqu’au {{ formation.closingDate | date('d/m/Y')}}.#}
</td>
</tr>
{% endfor %}
</table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <!-- // FLEXIBLE CONTAINER -->
</td>
</tr>
</table>
<!-- // CENTERING TABLE -->
</td>
</tr>
<!-- // MODULE ROW -->
{% endblock %}

