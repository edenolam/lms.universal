                            <path d="M120.969,39.507c-28.283,0-51.293,23.006-51.293,51.285c0,28.285,23.01,51.296,51.293,51.296 c28.279,0,51.286-23.011,51.286-51.296C172.255,62.513,149.248,39.507,120.969,39.507z M120.969,127.088 c-20.012,0-36.293-16.282-36.293-36.296c0-20.008,16.281-36.285,36.293-36.285c20.008,0,36.286,16.277,36.286,36.285 C157.255,110.806,140.977,127.088,120.969,127.088z"/>
                            <path d="M136.258,71.765l-22.155,22.15l-8.431-8.421c-2.93-2.928-7.679-2.925-10.607,0.006c-2.927,2.931-2.924,7.679,0.007,10.606 l13.733,13.718c1.464,1.463,3.382,2.194,5.3,2.194c1.919,0,3.839-0.732,5.303-2.196l27.455-27.449 c2.93-2.928,2.93-7.677,0.001-10.607C143.936,68.837,139.187,68.836,136.258,71.765z"/>
                        </g>
                    </svg>
                    <span class="text uppercase">
                        {% if 'pre-test-valid' in validationModes %}
                            {{ 'validant'|trans }}
                        {% endif %}
                    </span>
                </div>
                <div class="lms-indicators-item">
                    <i class="material-icons lms-material-icons"> access_time </i>
                    <span class="">{{ moduleTest.test.theoricalDuration|date("H:i:s") }}</span>
                </div>
                <div class="lms-indicators-item">
                    <i class="material-icons lms-material-icons"> calendar_today </i>
                    <span class="">
                        {% for mDate in currentSession.sessionFormationPathModules %}
                            {% if mDate.module.id == module.id %}
                                {% if moduleTest.test.typeTest.conditional == 'eval' %}
                                     {% if app.request.locale == "fr" %}
                                        {{ mDate.openingDateEvaluation|date("d/m/y") }} - {{ mDate.closingDateEvaluation| date('d/m/Y') }}
                                    {% else %} 
                                        {{mDate.openingDateEvaluation|date("y/m/d") }} - {{ mDate.closingDateEvaluation| date('y/m/d') }}
                                    {% endif %}
                                {% else %}
                                    {% if app.request.locale == "fr" %}
                                        {{ mDate.openingDate|date("d/m/y") }} - {{ mDate.closingDate| date('d/m/Y') }}
                                    {% else %} 
                                        {{mDate.openingDate|date("y/m/d") }} - {{ mDate.closingDate| date('y/m/d') }}
                                    {% endif %}
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    </span>
                </div>
                <div class="lms-indicators-item">
                    {% if moduleTest.test.TypeTest.conditional != 'training' %}
                        {% for i in 0..numberTry -1 %}
                            {% if i < nbtentetiveDown %}
                                <span class="lms-icon-try done"></span>
                            {% else %}
                                <span class="lms-icon-try"></span>
                            {% endif %}
                        {% endfor %}
                    {% else %}
                        {% if nbtentetiveDown > 0 %}
                            <span class="lms-icon-try done"></span>
                            {#. {{nbtentetiveDown}} . #}
                        {% else %}
                            <span class="lms-icon-try"></span>{# . 0 .#}
                        {% endif %}
                        <span class="lms-icon-try"></span>
                    {% endif %}
                    <span class="text">
                            {{ 'userFrontManagement.test.tries'|trans }}
                        </span>
                </div>
                <div class="lms-indicators-item">
                    <i class="material-icons lms-material-icons"> school </i>
                    {# {% set percentage = (100 * moduleTest.score)/nbQuestionTotal %} #}
                    {% if moduleTest.test.TypeTest.conditional != 'sondage' %}
                        <span class=""> > {{ moduleTest.score }} % </span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex align-items-center lms-title">
        <h2 class="lms-h2"><span class="text-uppercase">{{ 'userFrontManagement.module.title_m'|trans }}
                : </span>{{ moduleTest.module.title }}</h2>
    </div>

    <div class="row">

        <div class='col-md-4 col-xl-3 text-center'>
            <img src="{{ asset('images/core/pre-test.svg') }}" alt="">
        </div>

        <div class='col-md-8 col-xl-7 p-0 px-md-3'>
            <h3 class="title bold">
                {% if moduleTest.test.typeTest.conditional == 'pretest' %}
                    <img src="{{ asset('images/core/badge-jaune.svg') }}" alt="{{ moduleTest.test.typeTest.title }}"/>
                {% elseif moduleTest.test.typeTest.conditional == 'training' %}
                    <img src="{{ asset('images/core/badge-vert.svg') }}" alt="{{ moduleTest.test.typeTest.title }}"/>
                {% elseif moduleTest.test.typeTest.conditional == 'eval' %}
                    <img src="{{ asset('images/core/evaluation-top.svg') }}"
                         alt="{{ moduleTest.test.typeTest.title }}"/>
                {% endif %}
                <span>{{ moduleTest.test.typeTest.title }}</span>
            </h3>
            <p class="text">{{ moduleTest.test.title }}</p>
            <p class="text">{{ 'test.instruction_1'|trans }}</p>

            {% if moduleTest.test.typeTest.conditional == 'training' %}
                <p class="text bold">{{ 'test.instruction_2_training'|trans({'%percentage%': moduleTest.score }) }}</p>
            {% elseif moduleTest.test.typeTest.conditional == 'sondage' %}
            {% else %}
                <p class="text bold">{{ 'test.instruction_2'|trans({'%percentage%': moduleTest.score, '%try%': numberTry - nbtentetiveDown}) }}</p>
            {% endif %}

            {% if moduleTest.chronoQuestion %}

                <p class="text">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                        <path d="M11 15h2v2h-2v-2zm0-8h2v6h-2V7zm.99-5C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
                    </svg>
                    {{ 'test.instruction_chrono_question'|trans({'%chronoTestQuestion%' : moduleTest.chronoQuestionTime|date('H:i:s')})|raw }}
                </p>
            {% elseif moduleTest.chronoTest %}
                <p class="text">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                        <path d="M11 15h2v2h-2v-2zm0-8h2v6h-2V7zm.99-5C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
                    </svg>
                    {{ 'test.instruction_chrono_test'|trans({'%chronoTestTime%' : moduleTest.chronoTestTime|date("H:i:s")})|raw }}
                </p>
            {% endif %}
            <div class="d-flex justify-content-between">
                {% if userLastPage is null %}
                    <a href="{{ path('user_formation_module', {'slugSession':currentSession.slug}) }}" class="lms-button lms-button-blue">
                {% else %}
                    <a href="{{ path('user_formation_module_organisation', {'slugSession' : userLastPage.session.slug,  'formationPath': currentSession.formationPath.id,  'slugModule': userLastPage.module.slug, 'slugChapter': userLastPage.course.slug, 'slugPage': userLastPage.page.slug}) }}" class="lms-button lms-button-gray">
                {% endif %}

                {{ 'global.back'|trans }}</a>

                {% if nbtentetiveDown < numberTry or moduleTest.test.typeTest.conditional == 'training' %}
                    <a href="{{ path('test_front_prepare', {'sessionSlug' : currentSession.slug, 'moduleSlug' : moduleTest.module.slug,'testSlug' : moduleTest.test.slug}) }}"
                        class="lms-button lms-button-blue">
                        {{ 'userFrontManagement.test.begin_test'|trans }}</a>
                {% endif %}
            </div>
        </div>
    </div>


{% endblock %}