        </div> 
        <div class="form-group">            
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control form-group'} }) }}   
            {{ form_errors(form.plainPassword.first) }}
        </div>  
        <div class="form-group">
            {{ form_label(form.plainPassword.second,  'user.password.second'|trans) }}
        </div> 
        <div class="form-group">            
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control form-group'} }) }}  
            {{ form_errors(form.plainPassword.second) }}
        </div>            
        <div class="form-group">
            {{ form_label(form.laboratory,  'lov.laboratory'|trans ) }}
