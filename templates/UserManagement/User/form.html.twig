        </div> 
        <div class="form-group">            
            {{ form_widget(form.address, { 'attr': {'class': 'form-control form-group'} }) }}  
            {{ form_errors(form.address) }}  
        </div>       
        <div class="form-group">
            {{ form_label(form.addressBis,  'user.addressBis'|trans) }}
        </div> 
        <div class="form-group">            
            {{ form_widget(form.addressBis, { 'attr': {'class': 'form-control form-group'} }) }}  
            {{ form_errors(form.addressBis) }}  
        </div>       
        <div class="form-group">
            {{ form_label(form.zipCode,  'user.zipCode'|trans) }}
        </div> 
        <div class="form-group">            
            {{ form_widget(form.zipCode, { 'attr': {'class': 'form-control form-group'} }) }}  
            {{ form_errors(form.zipCode) }}  
        </div>    
        <div class="form-group">
            {{ form_label(form.phone,  'user.phone'|trans) }}
        </div> 
        <div class="form-group">            
            {{ form_widget(form.phone, { 'attr': {'class': 'form-control form-group'} }) }}  
            {{ form_errors(form.phone) }}  
        </div>          
        <div class="form-group">
            {{ form_label(form.country,  'user.country'|trans) }}
        </div> 
        <div class="form-group">            
            {{ form_widget(form.country, { 'attr': {'class': 'form-control form-group'} }) }}  
            {{ form_errors(form.country) }}  
        </div> 
        <div class="form-group">
            {{ form_label(form.function,  'user.function'|trans) }}
        </div> 
        <div class="form-group">            
            {{ form_widget(form.function, { 'attr': {'class': 'form-control form-group'} }) }}  
