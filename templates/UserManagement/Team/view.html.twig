{% extends 'base.html.twig' %}

{% block body %}
<div class="lms-breadcrumb">
    <span><a href="
				{% if is_granted('ROLE_APPRENANT') %} {{ path('home_dashboard') }}
        {% elseif is_granted('ROLE_TUTEUR') %} {{ path('dashboard_tuteur') }}
				{% elseif is_granted('ROLE_CONCEPTEUR') %} {{ path('sondage_view') }}
				{% elseif is_granted('ROLE_ADMIN') %} {{ path('admin_user_index') }}
				{% else %} {{ path('home_dashboard') }}
				{% endif %}">{{lms_name}}</a></span> >  <span><a  href="{{path('admin_team_list')}}">{{ 'team.action.list' | trans }}</a></span> > <span class="bold">{{ 'team.action.view' | trans }} ({{team.title}})</span>
</div>
<div class="d-flex align-items-center lms-title">
	<h1 class="text-uppercase lms-h1">{{ team.title }}</h1><hr>    
</div> 

<div class="row row-cards">
  <div class="col col-12 d-md-none">
    {% include "UserManagement/menu.html.twig" %}
  </div>

  <div class="col col-12"> 
    <div class="card-body"> 
          <div class="row">
              <label class="col-sm-2 form-label">{{ 'team.laboratory'|trans }}</label>
              <span class="form-view col-sm-6">{{ team.laboratory }}</span>
          </div> 
          <div class="row">
              <label class="col-sm-2 form-label">{{ 'team.division'|trans }}</label>
              <span class="form-view col-sm-6">{{ team.division }}</span>
          </div>                    
          <div class="row">
              <label class="col-sm-2 form-label">{{ 'team.title'|trans }}</label>
              <span class="form-view col-sm-6">{{ team.title}}</span>
          </div>                       
          <div class="row">
              <label class="col-sm-2 form-label">{{ 'team.description'|trans }}</label>
              <span class="form-view col-sm-6">{{ team.description}}</span>
          </div>    
          <div class="row">
              <label class="col-sm-2 form-label">{{ 'team.sort'|trans }}</label>
              <span class="form-view col-sm-6">{{ team.sort}}</span>
          </div>                                        
    </div> 
    <div class="row justify-content-around">
      <a href="{{ path('admin_team_list') }}" class="lms-button lms-button-gray">
        {{ 'global.back' | trans }}
      </a>  
    </div>         
  </div>  

</div>

{% endblock %}

{% block js %}
{{ parent() }}
<script>
$('#dropdown-users .dropdown-menu').addClass('show');
</script>  
{% endblock %}   