                                      </ul>
                                  {% else %}
                                       {{subObj}}
                                   {% endif %}
                              </li>
                          {% endfor %}
                      </ul>
                    {% else %}
                        {{query_request}}
                    {% endif #}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{'global.literal.close'|trans}}</button>
            </div>
        </div>
    </div>
</div>
{% endfor %}

