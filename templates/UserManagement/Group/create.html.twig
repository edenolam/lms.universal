{% extends 'base.html.twig' %}

{% block body %}
<div class="lms-breadcrumb">
   <span><a href="
				{% if is_granted('ROLE_APPRENANT') %} {{ path('home_dashboard') }}
                {% elseif is_granted('ROLE_TUTEUR') %} {{ path('dashboard_tuteur') }}
				{% elseif is_granted('ROLE_CONCEPTEUR') %} {{ path('sondage_view') }}
				{% elseif is_granted('ROLE_ADMIN') %} {{ path('admin_user_index') }}
				{% else %} {{ path('home_dashboard') }}
				{% endif %}">{{lms_name}}</a></span> > <span><a href="{{path('admin_group_list')}}">{{ 'group.action.list' | trans}}</a></span> > <span class="bold">{{ 'group.action.create' | trans}}</span>
</div>
<div class="d-flex align-items-center lms-title">
	<h1 class="text-uppercase lms-h1">{{ 'group.action.create' | trans }}</h1>
	<hr>
</div>		
<div class="row row-cards">
  <div class="col col-12"> 
	<form action="{{ path('admin_group_create')}}" method="post" class="form-horizontal choices" enctype="multipart/form-data">
		<div class="card-body">
					
			{% include "UserManagement/Group/form.html.twig" %} 

		</div>
	</form>  
</div>
</div>	

{% endblock %}

{% block js %}
{{ parent() }}
<script>
$('#dropdown-users .dropdown-menu').addClass('show');
</script>
{% endblock %}